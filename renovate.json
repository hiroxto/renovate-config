{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":enableRenovate",
    ":timezone(Asia/Tokyo)",
    ":label(renovate)",
    "config:base"
  ],
  "pin": {
    "extends": [
      "schedule:daily"
    ],
    "enabled": true,
    "automerge": true
  },
  "lockFileMaintenance": {
    "schedule": [
      "before 10am on the 1st day of the month"
    ],
    "enabled": true,
    "automerge": true
  },
  "bundler": {
    "enabled": true,
    "schedule": ["before 10am on monday"],
    "patch": {
      "automerge": true
    }
  },
  "composer": {
    "enabled": true,
    "schedule": ["before 10am on monday"],
    "patch": {
      "automerge": true
    }
  },
  "docker-compose": {
    "enabled": true,
    "schedule": ["before 10am on monday"],
    "automerge": false
  },
  "dockerfile": {
    "enabled": true,
    "schedule": ["before 10am on monday"],
    "automerge": false
  },
  "github-actions": {
    "enabled": true,
    "schedule": ["before 10am on monday"],
    "automerge": false
  },
  "gomod": {
    "enabled": true,
    "schedule": ["before 10am on monday"],
    "patch": {
      "automerge": true
    }
  },
  "npm": {
    "enabled": true,
    "schedule": ["before 10am on monday"],
    "patch": {
      "automerge": true
    },
    "minor": {
      "automerge": true
    }
  }
}
