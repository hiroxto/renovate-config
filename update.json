{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": [
        "パッケージのアップデートを設定。設定しているマネージャーは以下の通り。",
        "bundler",
        "composer",
        "github-actions",
        "gomod",
        "npm"
    ],
    "bundler": {
        "enabled": true,
        "patch": {
            "automerge": true
        }
    },
    "composer": {
        "enabled": true,
        "patch": {
            "automerge": true
        }
    },
    "github-actions": {
        "enabled": true,
        "automerge": false
    },
    "gomod": {
        "enabled": true,
        "patch": {
            "automerge": true
        }
    },
    "npm": {
        "enabled": true,
        "patch": {
            "automerge": true
        }
    }
}
