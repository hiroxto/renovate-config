    "description": "デフォルトで読み込まれる設定ファイル。",
    "extends": [
        "config:recommended",
        ":enableRenovate",
        ":timezone(Asia/Tokyo)",
        ":disableDependencyDashboard",
        "group:monorepos",
        "packages:eslint",
