{
  "extends": [
    ":enableRenovate",
    ":timezone(Asia/Tokyo)",
    ":label(renovate)",
    "config:base",
    "github>hiroxto/renovate-config:lockFileMaintenance",
    "github>hiroxto/renovate-config:pin"
  ],
  "bundler": {
    "enabled": true,
    "schedule": ["before 10am on monday"],
    "patch": {
      "automerge": true
    }
  },
  "composer": {
    "enabled": true,
    "schedule": ["before 10am on monday"],
    "patch": {
      "automerge": true
    }
  },
  "docker-compose": {
    "enabled": true,
    "schedule": ["before 10am on monday"],
    "automerge": false
  },
  "dockerfile": {
    "enabled": true,
    "schedule": ["before 10am on monday"],
    "automerge": false
  },
  "github-actions": {
    "enabled": true,
    "schedule": ["before 10am on monday"],
    "automerge": false
  },
  "gomod": {
    "enabled": true,
    "schedule": ["before 10am on monday"],
    "patch": {
      "automerge": true
    }
  },
  "npm": {
    "enabled": true,
    "schedule": ["before 10am on monday"],
    "patch": {
      "automerge": true
    }
  }
}
